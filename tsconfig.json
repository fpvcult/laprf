{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020"],
    "strict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "skipLibCheck": true,
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["lib", "node_modules", "**/*.test.ts"]
}
